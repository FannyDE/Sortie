{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Nouvelle sortie{% endblock %}

{% block body %}

    <div class="main_body">

        <div class="formulaire_titre">
            <h3>Créer une sortie</h3>
        </div>
        <div class="formulaire_sortie">
            {{ form_start(sortieForm) }}
            <div class="form_sortie_main">
                <div class="left_column">   
                    {{ form_row(sortieForm.nom) }}
                    <br>
                    {{ form_row(sortieForm.dateHeureDebut) }}
                    <br>
                    {{ form_row(sortieForm.dateLimiteInscription) }}
                    <br>
                    {{ form_row(sortieForm.nbInscriptionMax) }}
                    <br>
                    {{ form_row(sortieForm.duree) }}minutes
                    <br>
                    {{ form_row(sortieForm.infosSortie) }}
                </div>

                <div class="right_column">   
                    {{ form_row(sortieForm.campus) }}
                    <br>
                    <p>Ville : Menu déroulant des villes disponibles dans la BDD</p>
                    <br>
                    {{ form_row(sortieForm.lieu) }}
                    <br>
                    <p>Rue : Afficher rue du lieu</p>
                    <br>
                    <p>Code postal : Afficher code postal de la ville</p>
                    <br>
                    <p>Latitude : Afficher latitude du lieu</p>
                    <br>
                    <p>Longitude : Afficher longitude du lieu</p>
                </div>
            </div>
            <div class="partie_boutons">
                <button class="save">Enregistrer</button>
                <button class="publish">Publier la sortie</button>
                <button class="cancel">Annuler</button>
            </div>
            {{ form_end(sortieForm) }}
        </div>

        
    </div>

{% endblock %}
